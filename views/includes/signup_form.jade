form(action="/signup" method="POST" id="signup-form")
  .credentials
    label(for="username")  Choose a username
      br
      input(type="text" name="username" class=errUsername )
    br
    label(for="email")  Enter your email address
      br
      input(type="text" name="email" class=errEmail )
    br
    label(for="password") Choose a password
      br
      input(type="password" name="password" class=errPassword )
    br
    br
    p.login Already have an account ? 
      a(href="/login") <strong>Good for you!</strong>
    br
    input(type="submit" value="SIGN UP NOW!")
