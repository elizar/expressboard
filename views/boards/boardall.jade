extends ../layout

block content
  #container.container
    .content
      .left
        h2 There are currrently <strong> #{threads.length} </strong> threads in this board.
      .right
        .menu
          a(href="/board/")  My Threads 
          span | 
          a.active(href="/board/all") Show All  
          span |
          a(href="/board/new")  Create New  
    .content
      hr
      -if (errorFlash && errorFlash.length > 0)
        p.error=errorFlash[0]
      -if (infoFlash && infoFlash.length > 0)
        p.success=infoFlash[0]
        br
      ul.threads
        -var i = threads.length
        -while(i--)
          li.thread 
            h4
              a(href="/board/" + threads[i].slug) #{threads[i].title}

