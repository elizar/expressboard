extends ../layout

block content
	#container.container
		.content
			h2 New Thread
			hr
			form(action="/board/create" method="POST" id="signup-form")
				label(for="title") <br />Title<br />
				input(type="text" name="title" placeholder="i.e: Why did the chicken cross the road?")
				label(for="description") <br />Description<br />
				textarea(placeholder="Write your first post about this topic" rows="10" name="description")
				.submit
					input(type="submit" value="Submit and Save")