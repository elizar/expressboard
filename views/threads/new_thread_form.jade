extends ../layout

block content
  #container.container
    .wrapper
      .content
        .left
          h2 NEW THREAD
        .right
          include ../includes/filter-menu
      .content
        hr
        -if (errorFlash && errorFlash.length > 0)
          br
          - err = errorFlash[0].errors
          - if (err.title) errorMessage = err.title.type
          - else errorMessage = err.message.type
          p.error= errorMessage

        form(action="/threads/new" method="POST" id="signup-form")
          label(for="title") Title<br />
          input(type="text", name="title")
          label(for="description") <br /> Initial Post<br />
          textarea(rows="10", name="description")
          .submit
            input(type="submit" value="Publish This Thread")
            em.sub * No HTML tags is allowed, you may use <b>markdown</b> to format you text
